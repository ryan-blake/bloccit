<%= form_for [@topic, @sponsoredpost] do |f| %>
   <%= f.label :title %>
   <%= f.text_field :title %>

   <%= f.label :body %>
   <%= f.text_area :body %>

   <%= f.label :price %>
   <%= f.number_field :price %>

   <%= f.submit "Save" %>
 <% end %>

