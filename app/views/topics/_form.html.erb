<%= form_for [topic, description] do |f| %>
<% if description.errors.any? %>
# #6
<div class="alert alert-danger">
  # #7
  <h4><%= pluralize(description.errors.count, "error") %>.</h4>
  <ul>
    <% description.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
    <% end %>
  </ul>
</div>
<% end %>
# #8
<%= form_group_tag(description.errors[:title]) do %>
<%= f.label :title %>

<%= f.text_field :title, class: 'form-control', placeholder: "Enter description title" %>
<% end %>
<%= form_group_tag(description.errors[:body]) do %>

<%= f.label :body %>
<%= f.text_area :body, rows: 8, class: 'form-control', placeholder: "Enter description body" %>
<% end %>
<div class="form-group">
  <%= f.submit "Save", class: 'btn btn-success' %>
</div>
<% end %>
