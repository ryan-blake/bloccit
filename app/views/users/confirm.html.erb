<h1>Sign Up Confirmation</h1>
<h2>Are you sure these values are correct?</h2>

<div class="row">
  <div class="col-md-8">
    <%= form_for @user do |f| %>

      <div class="New_correct">
        <ul>
          <li><h4><%= "Email: #{@user.email}" %></h4></li>
          <li><h4><%= "Name: #{@user.name}" %></h4></li>
        </ul>
      </div>

      <%= button_to "Yes", {:controller => "users", :action => "create", :params => params}, class: 'btn btn-success' %>
      <%= link_to "No", 'javascript:history.go(-1);', class: 'btn btn-fail' %>
    <% end %>
  </div>

</div>
